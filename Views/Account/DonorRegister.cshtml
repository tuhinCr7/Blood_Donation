@{
    ViewData["Title"] = "Register as Donor";
}

<div class="container mt-5 mb-5 min-vh-100 d-flex align-items-center justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="card-header bg-white text-center py-5 border-0">
                <div class="display-1 text-danger mb-4">ðŸ©¸ Life Saves ðŸ©¸</div>
                <h2 class="fw-bold text-dark">Become a Blood Donor</h2>
                <p class="text-muted fs-5">Your donation can save lives â€” register today</p>
            </div>

            <div class="card-body p-5">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger rounded-3 mb-4">@ViewBag.Error</div>
                }

                <form method="post" asp-action="DonorRegister">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Username</label>
                            <input type="text" name="Username" class="form-control form-control-lg" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Password</label>
                            <input type="password" name="password" class="form-control form-control-lg" required />
                        </div>
                    </div>

                    <div class="row g-3 mt-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Full Name</label>
                            <input type="text" name="Name" class="form-control form-control-lg" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" name="Email" class="form-control form-control-lg" required />
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label fw-bold">Phone Number</label>
                        <input type="text" name="Phone" class="form-control form-control-lg" required />
                    </div>

                    <div class="mt-3">
                        <label class="form-label fw-bold">Blood Group</label>
                        <select name="BloodGroupId" class="form-select form-select-lg" required>
                            <option value="">-- Select Blood Group --</option>
                            @foreach (var bg in ViewBag.BloodGroups)
                            {
                                <option value="@bg.Id">@bg.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mt-3">
                        <label class="form-label fw-bold">Full Address</label>
                        <textarea name="Address" class="form-control" rows="3" required></textarea>
                    </div>

                    <div class="mt-4">
                        <label class="form-label fw-bold">Last Donation Date</label>
                        <div class="input-group input-group-lg">
                            <input type="date" name="LastDonationDate" class="form-control" id="donationDate" />
                            <span class="input-group-text">
                                <input type="checkbox" id="neverDonated" onchange="toggleDonationDate()" />
                                <label class="form-check-label ms-2" for="neverDonated">Never donated</label>
                            </span>
                        </div>
                    </div>
                    <div class="mt-4">
    <label class="form-label fw-bold">WhatsApp Number <small class="text-muted">(optional - for quick contact)</small></label>
    <div class="input-group input-group-lg">
        <span class="input-group-text bg-light border-0">ðŸ“±</span>
        <input type="text" name="WhatsApp" class="form-control" placeholder="+91 98765 43210" />
    </div>
    <small class="text-muted">Patients can message you directly on WhatsApp</small>
</div>

<div class="mt-4">
    <label class="form-label fw-bold">Facebook Profile URL or ID <small class="text-muted">(optional)</small></label>
    <div class="input-group input-group-lg">
        <span class="input-group-text bg-light border-0">ðŸ“˜</span>
        <input type="text" name="Facebook" class="form-control" placeholder="facebook.com/yourname or yourname" />
    </div>
    <small class="text-muted">Patients can message you on Facebook Messenger</small>
</div>

                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-danger btn-lg w-100 rounded-pill shadow-lg hover-glow py-3 fw-bold">
                            Register as Donor
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Already registered? <a href="/Account/Login" class="text-danger fw-bold">Login here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleDonationDate() {
        const checkbox = document.getElementById('neverDonated');
        const dateInput = document.getElementById('donationDate');
        if (checkbox.checked) {
            dateInput.value = '';
            dateInput.disabled = true;
        } else {
            dateInput.disabled = false;
        }
    }
</script>

<style>
    .hover-glow:hover {
        box-shadow: 0 0 40px rgba(220, 53, 69, 0.5);
        transform: translateY(-5px);
        transition: all 0.4s ease;
    }

    .form-control:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }

    .card {
        transition: all 0.4s ease;
    }

    .card:hover {
        transform: translateY(-10px);
    }
</style>