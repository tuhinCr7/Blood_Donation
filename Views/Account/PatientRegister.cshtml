@{
    ViewData["Title"] = "Register as Patient";
}

<div class="container mt-5 mb-5 min-vh-100 d-flex align-items-center justify-content-center">
    <div class="col-md-7 col-lg-5">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="card-header bg-white text-center py-5 border-0">
                <div class="display-1 text-primary mb-4">ðŸ©¸ Life Saves ðŸ©¸</div>
                <h2 class="fw-bold text-dark">Register as Patient</h2>
                <p class="text-muted fs-5">Find available blood donors in emergencies</p>
            </div>

            <div class="card-body p-5">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger rounded-3 mb-4">@ViewBag.Error</div>
                }

                <form method="post" asp-action="PatientRegister">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Username</label>
                        <input type="text" name="Username" class="form-control form-control-lg" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Password</label>
                        <input type="password" name="password" class="form-control form-control-lg" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Full Name</label>
                        <input type="text" name="Name" class="form-control form-control-lg" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" name="Email" class="form-control form-control-lg" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Phone Number</label>
                        <input type="text" name="Phone" class="form-control form-control-lg" required />
                    </div>

                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill shadow-lg hover-glow py-3 fw-bold">
                            Register as Patient
                        </button>
                    </div>

                    <div class="text-center mt-4">
                        <p class="text-muted">
                            Already registered? <a href="/Account/Login" class="text-primary fw-bold">Login here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-glow:hover {
        box-shadow: 0 0 40px rgba(0, 123, 255, 0.5);
        transform: translateY(-5px);
        transition: all 0.4s ease;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }

    .card {
        transition: all 0.4s ease;
    }

    .card:hover {
        transform: translateY(-10px);
    }
</style>