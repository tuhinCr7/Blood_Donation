@model List<CSproject.Models.DonorViewModel>

@{
    ViewData["Title"] = "Manage Donors";
}

<div class="container mt-5">
    <h1 class="text-center display-5 fw-bold text-danger mb-5">Manage All Donors</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (!Model.Any())
    {
        <p class="text-center fs-4 text-muted">No donors registered yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-danger">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Blood Group</th>
                        <th>Address</th>
                        <th>WhatsApp</th>
                        <th>Facebook</th>
                        <th>Last Donation</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var donor in Model)
                    {
                        <tr>
                            <td><strong>@donor.Name</strong></td>
                            <td>@donor.Email</td>
                            <td>@donor.Phone</td>
                            <td><span class="badge bg-danger">@donor.BloodGroupName</span></td>
                            <td>@donor.Address</td>
                            <td>
                                @if (!string.IsNullOrEmpty(donor.WhatsApp))
                                {
                                    <a href="https://wa.me/@donor.WhatsApp.Replace("+","")" target="_blank">ðŸ“± @donor.WhatsApp</a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(donor.Facebook))
                                {
                                    <a href="https://facebook.com/@donor.Facebook" target="_blank">ðŸ“˜ @donor.Facebook</a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@(donor.LastDonationDate?.ToString("dd MMM yyyy") ?? "Never")</td>
                            <td>
                                <span class="@(donor.AvailabilityStatus ? "text-success" : "text-danger") fw-bold">
                                    @(donor.AvailabilityStatus ? "Available" : "Unavailable")
                                </span>
                            </td>
                            <td>
                                <a href="/Admin/DeleteDonor/@donor.Id" class="btn btn-danger btn-sm rounded-pill">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="text-center mt-4">
        <a href="/Admin/Dashboard" class="btn btn-outline-secondary btn-lg rounded-pill">
            Back to Dashboard
        </a>
    </div>
</div>