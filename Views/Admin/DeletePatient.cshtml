@model CSproject.Models.User

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Confirm Delete Patient</h3>
                </div>
                <div class="card-body p-5 text-center">
                    <p class="fs-4">Are you sure you want to delete this patient?</p>
                    <h5 class="fw-bold text-primary">@Model.Name</h5>
                    <p>Email: @Model.Email<br>Phone: @Model.Phone</p>

                    <form method="post" asp-action="DeletePatientConfirmed">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-5 me-3">Yes, Delete</button>
                        <a href="/Admin/ManagePatients" class="btn btn-secondary btn-lg px-5">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>