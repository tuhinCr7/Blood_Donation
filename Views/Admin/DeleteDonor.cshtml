@model CSproject.Models.DonorViewModel

@{
    ViewData["Title"] = "Delete Donor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Confirm Delete Donor</h3>
                </div>
                <div class="card-body p-5 text-center">
                    <p class="fs-4">Are you sure you want to delete this donor?</p>
                    <h5 class="fw-bold text-danger">@Model.Name</h5>
                    <p>Email: @Model.Email<br>Blood Group: @Model.BloodGroupName</p>

                    <form method="post" asp-action="DeleteDonorConfirmed">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-5 me-3">Yes, Delete</button>
                        <a href="/Admin/ManageDonors" class="btn btn-secondary btn-lg px-5">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>