@model List<CSproject.Models.DonorViewModel>

@{
    ViewData["Title"] = "Manage Donors";
}

<div class="container mt-5">
    <h1 class="text-center display-5 fw-bold text-danger mb-5">Manage Registered Donors</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mb-4 text-center">@TempData["Success"]</div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <p class="fs-4 text-muted">No donors registered yet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle shadow-sm rounded">
                <thead class="table-danger text-white">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Blood Group</th>
                        <th>Address</th>
                        <th>WhatsApp</th>
                        <th>Facebook</th>
                        <th>Last Donation</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var donor in Model)
                    {
                        <tr>
                            <td><strong>@donor.Name</strong></td>
                            <td>@donor.Email</td>
                            <td>@donor.Phone</td>
                            <td><span class="badge bg-danger fs-6">@donor.BloodGroupName</span></td>
                            <td>@donor.Address</td>
                            <td>
                                @if (!string.IsNullOrEmpty(donor.WhatsApp))
                                {
                                    <a href="https://wa.me/@donor.WhatsApp.Replace("+","")" target="_blank" class="text-success">
                                        üì± @donor.WhatsApp
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(donor.Facebook))
                                {
                                    <a href="https://facebook.com/@donor.Facebook" target="_blank" class="text-primary">
                                        üìò @donor.Facebook
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@(donor.LastDonationDate?.ToString("dd MMM yyyy") ?? "Never")</td>
                            <td>
                                <!-- Proper Delete Link with Confirmation -->
                                <a href="@Url.Action("DeleteDonor", "Admin", new { id = donor.Id })" 
                                   class="btn btn-danger btn-sm rounded-pill px-4 shadow-sm">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="text-center mt-5">
        <a href="/Admin/Dashboard" class="btn btn-outline-danger btn-lg px-5 rounded-pill shadow hover-glow">
            ‚Üê Back to Dashboard
        </a>
    </div>
</div>

<style>
    .hover-glow:hover {
        box-shadow: 0 0 30px rgba(220, 53, 69, 0.5);
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }
</style>